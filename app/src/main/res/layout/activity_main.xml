<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/detailpemesanan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/raleweybold"
        android:text="Detail Pemesanan"
        android:textSize="24dp"
        android:layout_marginStart="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/threedot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:src="@drawable/menu"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/green"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="40dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/button_shape"
        app:layout_constraintStart_toStartOf="@id/detailpemesanan"
        app:layout_constraintTop_toBottomOf="@id/detailpemesanan">

        <ImageView
            android:id="@+id/camp"
            android:layout_width="50dp"
            android:layout_height="78dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/camp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppinsbold"
            android:text="Ini halaman terakhir dari proses\nreservasimu. Pastikan semua sudah\nbenar, ya :)" />

    </LinearLayout>

    <TextView
        android:id="@+id/pesan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppinssemibold"
        android:text="Deck yang dipesan"
        android:textSize="22sp"
        app:layout_constraintTop_toBottomOf="@id/green" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/abu"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/rectangle"
        app:layout_constraintTop_toBottomOf="@id/pesan">

        <ImageView
            android:id="@+id/gambar"
            android:layout_width="98dp"
            android:layout_height="93dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/tenda"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/deck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinssemibold"
            android:text="Deck 2 Pineus Tilu 1"
            android:textSize="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/gambar"
            app:layout_constraintStart_toEndOf="@+id/gambar" />

        <TextView
            android:id="@+id/harga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="97dp"
            android:fontFamily="@font/poppinlight"
            android:text="Rp 700.000"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="@id/deck"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@id/deck"
            app:layout_constraintTop_toBottomOf="@id/deck" />

        <TextView
            android:id="@+id/jumlah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinsbold"
            android:text="Jumlah Orang"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/harga"
            app:layout_constraintTop_toBottomOf="@id/harga"/>

        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:background="@drawable/rectangle2"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="@id/jumlah"
            app:layout_constraintTop_toBottomOf="@id/jumlah">

            <ImageView
                android:id="@+id/minus"
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:src="@drawable/minus"
                android:layout_marginStart="10dp"/>


            <TextView
                android:id="@+id/numberorder"
                android:layout_width="14sp"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="20sp"
                android:layout_marginStart="17dp"
                android:fontFamily="@font/poppinsmedium"/>

            <ImageView
                android:id="@+id/plus"
                android:layout_width="15sp"
                android:layout_height="wrap_content"
                android:layout_marginStart="9dp"
                android:src="@drawable/plus" />

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/dwtail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detail Pemesanan"
        android:textSize="20sp"
        android:fontFamily="@font/poppinssemibold"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/abu"
        app:layout_constraintStart_toStartOf="@id/abu"/>

    <TextView
        android:id="@+id/in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check in  :"
        android:fontFamily="@font/poppinssemibold"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/dwtail"
        app:layout_constraintStart_toStartOf="@id/dwtail"/>

    <TextView
        android:id="@+id/Durasi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Durasi       :"
        android:fontFamily="@font/poppinssemibold"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/in"
        app:layout_constraintStart_toStartOf="@id/in"/>

    <TextView
        android:id="@+id/jam1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jam Check in :"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/Durasi"
        app:layout_constraintStart_toStartOf="@id/Durasi"/>

    <TextView
        android:id="@+id/jam2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jam Check in :"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/jam1"
        app:layout_constraintStart_toStartOf="@id/jam1"/>

    <TextView
        android:id="@+id/detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DETAIL FACILITIES :"
        android:fontFamily="@font/raleweybold"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/jam2"
        app:layout_constraintStart_toStartOf="@id/jam2"/>

    <TextView
        android:id="@+id/Facilitas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PRIVATE FACILITIES :
\n- 4 PAX AMENITIES (Foam Mattress + Bantal, Sleeping Bag, Default Sarapan)
\n- Colokan listrik di dalam tenda
\n- Lampu dalam tenda
\n- Meja private dining setiap tenda
\n- Coffee table di dalam tenda
\n- Alat BBQ tiap tenda (belum termasuk arang, \ncapitan, alat makan and minum)"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@+id/detail"
        app:layout_constraintStart_toStartOf="@id/detail"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/kembali"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="230dp"
        android:background="@drawable/kembali"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/Facilitas"
        app:layout_constraintTop_toBottomOf="@id/Facilitas">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Kembali"
            android:textSize="20sp"
            android:fontFamily="@font/ralewaysemibold"
            android:layout_marginStart="45dp"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="@id/kembali"
            app:layout_constraintTop_toTopOf="@id/kembali"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_marginTop="23dp"
        android:background="@drawable/book"
        android:text="Book"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.46"
        app:layout_constraintStart_toEndOf="@id/kembali"
        app:layout_constraintTop_toBottomOf="@id/Facilitas" />

</androidx.constraintlayout.widget.ConstraintLayout>